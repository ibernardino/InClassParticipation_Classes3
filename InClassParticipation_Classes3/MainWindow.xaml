        <TextBox x:Name="txtCity" HorizontalAlignment="Left" Margin="118,265,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtState" HorizontalAlignment="Left" Margin="118,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
